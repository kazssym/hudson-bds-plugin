<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>1.565.3</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.vx68k.jenkins</groupId>
    <artifactId>bds-plugin</artifactId>
    <packaging>hpi</packaging>
    <name>RAD Studio Plugin</name>
    <version>1.0</version>
    <description>
        Plugin for Jenkins to allow users to set RAD Studio variables in their
        projects.
    </description>
    <url>https://bitbucket.org/kazssym/jenkins-bds-plugin</url>
    <issueManagement>
        <system>Bitbucket</system>
        <url>https://bitbucket.org/kazssym/jenkins-bds-plugin/issues</url>
    </issueManagement>
    <developers>
        <developer>
            <id>kazssym</id>
            <name>Kaz Nishimura</name>
            <email>kazssym@vx68k.org</email>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>GNU Affero General Public License</name>
            <url>http://www.gnu.org/licenses/agpl.html</url>
            <comments>Version 3 (or any later version)</comments>
        </license>
    </licenses>
    <scm>
        <connection>src:hg:https://bitbucket.org/kazssym/jenkins-bds-plugin</connection>
        <developerConnection>src:hg:https://bitbucket.org/kazssym/jenkins-bds-plugin</developerConnection>
        <url>https://bitbucket.org/kazssym/jenkins-bds-plugin</url>
    </scm>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.2</version>
                <configuration>
                    <encoding>${project.build.sourceEncoding}</encoding>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.17</version>
                <configuration>
                    <excludes>
                        <!-- To avoid test failures on Windows, -->
                        <exclude>InjectedTest.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
            </plugins>
    </build>
    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>
