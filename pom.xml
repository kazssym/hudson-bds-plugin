<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>1.565</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>bds-plugin</artifactId>
    <packaging>hpi</packaging>
    <name>RAD Studio Plugin</name>
    <version>3.0</version>
    <description>
        Jenkins plugin to allow users to build RAD Studio projects or project
        groups.
    </description>
    <url>https://wiki.jenkins-ci.org/display/JENKINS/RAD+Studio+Plugin</url>
    <issueManagement>
        <system>Bitbucket</system>
        <url>https://bitbucket.org/kazssym/jenkins-bds-plugin/issues</url>
    </issueManagement>
    <developers>
        <developer>
            <id>kazssym</id>
            <name>Kaz Nishimura</name>
            <email>kazssym@vx68k.org</email>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>GNU Affero General Public License</name>
            <url>http://www.gnu.org/licenses/agpl.html</url>
            <comments>Version 3 (or any later version)</comments>
        </license>
    </licenses>
    <scm>
        <connection>scm:hg:https://bitbucket.org/kazssym/jenkins-bds-plugin</connection>
        <developerConnection>scm:hg:https://bitbucket.org/kazssym/jenkins-bds-plugin</developerConnection>
        <tag>release/3.0</tag>
        <url>https://bitbucket.org/kazssym/jenkins-bds-plugin/src</url>
    </scm>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <!-- To avoid test failures on Windows: -->
                        <exclude>InjectedTest.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <links>
                        <link>http://javadoc.jenkins-ci.org/</link>
                        <link>http://stapler.kohsuke.org/apidocs/</link>
                    </links>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <pushChanges>false</pushChanges>
                    <tagNameFormat>release/@{project.version}</tagNameFormat>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>
    <properties>
        <project.build.sourceEncoding>US-ASCII</project.build.sourceEncoding>
    </properties>
</project>
