            <groupId>org.jenkins-ci.plugins</groupId>
            <artifactId>msbuild</artifactId>
            <version>1.24</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    -->
    <properties>
        <project.build.sourceEncoding>US-ASCII</project.build.sourceEncoding>
    </properties>
</project>
